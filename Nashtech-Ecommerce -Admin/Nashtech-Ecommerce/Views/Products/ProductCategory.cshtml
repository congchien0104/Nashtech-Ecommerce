@model IEnumerable<Nashtech_Ecommerce.Models.Product>
@{
    ViewData["Title"] = "Home Page";
    //var products = (List<Nashtech_Ecommerce.Models.Product>)ViewBag.products;
}

@section Categories     {
    @await Component.InvokeAsync("Category")
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-deck ml-4 mt-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/@product.Image" alt=@product.Name>
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-title">@product.Price VND</p>
                    <span class="rating">
                        <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
                        <label for="rating-input-1-5" class="rating-star1"> </label>
                        <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
                        <label for="rating-input-1-4" class="rating-star1"> </label>
                        <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
                        <label for="rating-input-1-3" class="rating-star"> </label>
                        <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
                        <label for="rating-input-1-2" class="rating-star"> </label>
                        <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
                        <label for="rating-input-1-1" class="rating-star"> </label>
                    </span>
                    <div class="row">
                        <div class="col-8">
                            <a class="btn btn-primary" asp-controller="Products" asp-action="AddToCart" asp-route-id=@product.Id>Add To Cart</a>
                        </div>
                        <div class="col-4">
                            <a class="btn btn-success mr-2" asp-controller="Products" asp-action="Details" asp-route-id=@product.Id>Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
